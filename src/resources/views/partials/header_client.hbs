<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/MainCSS/header.css">
    <link rel="stylesheet" href="/css/MainCSS/modal.css">
    <title>Document</title>
</head>

<body>
    <div class="header grid-col">
        <nav class="header__navbar h-o-m-t">
            <div class="header__navbar-list">
                <!-- header-qr -->
                <div class="header__navbar-item qr">
                    Tải ứng dụng
                    <div class="header__qr">
                        <img src="./img/qrcodeapp.png" alt="QR Code" id="header__qr-img">
                        <div class="qr-app">
                            <a href="https://play.google.com/store">
                                <img src="./img/ggplay.jpg" alt="GG Play" class=" ggplay">
                            </a>
                            <a href="https://www.apple.com/app-store/">
                                <img src="./img/appstore.jpg" alt="App Store" class="appstore">
                            </a>

                        </div>
                    </div>
                </div>
                <!-- Kết nối -->
                <div class="header__navbar-item">
                    Kết nối
                    <a href="https://www.facebook.com/" class="header__navbar-item-link">
                        <i class="fab fa-facebook"></i>
                    </a>
                    <a href="https://www.instagram.com/" class="header__navbar-item-link">
                        <i class="fab fa-instagram"></i>
                    </a>
                </div>
                <!-- Khoảng trống đẩy -->
                <div class="header__navbar-item space"></div>
                <!-- Thống báo -->
                <div class="header__navbar-item navbarnotice">
                    <a href="./notification.html" class="header__navbar-item-link ">
                        <i class="far fa-bell "></i>
                        Thông báo
                    </a>
                    <div class="header__notice">
                        <header class="header__notice-header">
                            <h3>Thông báo mới nhận</h3>
                        </header>

                        <div class="header__notice-item">
                            <a href="" class="header__notice-link">
                                <img src="./img/tb2.jpg" alt="" class="header__notice-img">
                                <div class="header__notice-info">
                                    <span class="header_notice-name title2">Ten SP</span>
                                    <span class="header_notice-descript">Day la mo ta san pham: 123xyz</span>
                                </div>
                            </a>
                        </div>
                        <div class="header__notice-item">
                            <a href="" class="header__notice-link">
                                <img src="./img/tb2.jpg" alt="" class="header__notice-img">
                                <div class="header__notice-info">
                                    <span class="header_notice-name title2">Ten SP</span>
                                    <span class="header_notice-descript">Day la mo ta san pham: 123xyz</span>
                                </div>
                            </a>
                        </div>
                        <div class="header__notice-item">
                            <a href="" class="header__notice-link">
                                <img src="./img/tb2.jpg" alt="" class="header__notice-img">
                                <div class="header__notice-info">
                                    <span class="header_notice-name title2">Ten SP</span>
                                    <span class="header_notice-descript">Day la mo ta san pham: 123xyz</span>
                                </div>
                            </a>
                        </div>

                        <footer class="header__notice-footer">
                            <a href="./notification.html" class="header__notice-footer show-all">Xem tất cả</a>
                        </footer>
                    </div>
                </div>
                <!-- Trợ giúp -->
                <div class="header__navbar-item">
                    <a href="" class="header__navbar-item-link">
                        <i class="far fa-question-circle"></i>
                        Trợ giúp
                    </a>
                </div>
                <!-- Đăng kí -->
                <div class="header__navbar-item reg-btn" style="font-weight: 500;">Đăng kí</div>
                <!-- Đăng nhập -->
                <div class="header__navbar-item login-btn" style="font-weight: 500;">Đăng nhập</div>
                <!-- Tài khoản -->
                <div class="header__navbar-item user-account">
                    <a>
                        <div class="user-img">
                            <img src="./img/user-img.jpg" alt="" id="user-img">
                            <div class="user-name">User ADBCH</div>
                        </div>
                    </a>
                    <ul class="user-account-ul">
                        <li class="user-account-li my-acc">Tài khoản của tôi</li>
                        <li class="useraccount-li my-cart">Đơn hàng</li>
                        <li class="user-account-li logout-btn">Đăng xuất</li>
                    </ul>
                </div>
            </div>
            <div class="header__navbar-item-close-navbar l-0">
                <i class="fas fa-times"></i>
            </div>
        </nav>
        <div class="header__search-panel">
            <!-- navbar hider   -->
            <div class="header__navbar-hider">
                <i class="fas fa-bars"></i>
            </div>
            <!-- LogoHomePage -->
            <div class="header__logo">
                <a href="" class="header__home-link">
                    <i class="fab fa-react"></i>
                    ReactMobile
                </a>

            </div>
            <!-- SearchBar -->
            <div class="header__searchbar">
                <input type="text" class="header__searchbar-inp" placeholder="Bạn đang tìm gì...">
                <div class="select-item">
                    <span class="select-label h-o-m">Trong Shop</span>
                    <i class="fas fa-chevron-down"></i>
                    <ul class="select-ul">
                        <li> <span class="item-li">Trong Shop</span> </li>
                        <li> <span class="item-li">Ngoài Shop</span> </li>
                    </ul>
                </div>
                <button class="header__searchbar-goto" type="search">
                    <i class="fas fa-search"></i>
                </button>
            </div>
            <!-- Cart -->
            <div class="header__cart">
                <div class="cart-notify"></div>
                <a href="./cart.html" class="header__cart-link">
                    <i class="fas fa-shopping-cart"></i>
                </a>
                <div class="cart-list">
                    <img src="./img/no-cart.png" alt="" class="empty-cart-img">
                    <div class="cart-list-header">Sản phẩm mới thêm vào giỏ</div>
                    <ul class="cart-list-ul">

                    </ul>
                    <div class="header__cart viewcart">
                        <button onclick=" window.location.href='./cart.html' " class="viewcart-btn">Xem giỏ
                            hàng</button>
                    </div>

                </div>
            </div>
        </div>
    </div>


    <div class="modal">
        <div class="modal__body">
            <!--Register form-->
            <div class="auth-form reg-form">

                <div class="auth-form__container">
                    <div class="auth-form__header">
                        <h3 class="auth-form__LoginText">Đăng kí</h3>
                        <span class="auth-form__switch-btn switch-log">Đăng nhập</span>
                    </div>
                    <div class="auth-form__body">
                        <form id="reg-form" method="POST" action="/account/register/">
                            <div class="auth-form__group">
                                <div class="auth-form__group">
                                    <input type="text" class="auth-form__input user" placeholder="Tên đăng nhập/Email" name="user" onblur="CheckAll('.user')">
                                    <span class="validate-message"></span>
                                </div>
                                <div class="auth-form__group">
                                    <input type="text" class="auth-form__input passs" placeholder="Mật khẩu" name="pass" onblur="CheckAll('.passs')">
                                    <span class="validate-message"></span>
                                </div>
                                <div class="auth-form__group">
                                    <input type="password" class="auth-form__input passs-confirm" placeholder="Xác nhận mật khẩu" onblur="CheckAll('.passs-confirm')">
                                    <span class="validate-message"></span>
                                </div>
                            </div>
                            <div class="auth-form___policy">
                                <p style="text-align: center; font-size:1rem">
                                    Bằng việc đăng kí, bạn đồng ý với React về
                                    <a href="" class="iagree">Điều khoản dịch vụ</a> &
                                    <a href="" class="iagree">Chính sách bảo mật</a>
                                </p>
                            </div>

                            <div class="auth-form__control">
                                <button type="button" class="btn submit-btn reg-form-child">Đăng kí</button>
                                <button type="button" class="btn back-btn reg-form-child">Quay lại</button>
                            </div>

                        </form>

                    </div>
                </div>
                <div class="auth-form__footer">
                    <button class="btn btn-face"><i class="fab fa-facebook-square"></i> Kết nối với
                        Facebook</button>
                    <button class="btn btn-gg"><i class="fab fa-google"></i> Kết nối với Google</button>
                </div>
            </div>
            <div class="auth-form login-form">
                <div class="auth-form__container">
                    <div class="auth-form__header">
                        <h3 class="auth-form__LoginText">Đăng nhập</h3>
                        <span class="auth-form__switch-btn switch-reg">Đăng kí</span>
                    </div>
                    <div class="auth-form__body">
                        <div class="auth-form__group">
                            <div class="auth-form__group">
                                <input type="text" class="auth-form__input input-login user"
                                    placeholder="Tên đăng nhập/Email">
                                <span class="validate-message"></span>
                            </div>
                            <div class="auth-form__group">
                                <input type="password" class="auth-form__input input-login pass" placeholder="Mật khẩu">
                                <span class="validate-message"></span>
                            </div>
                        </div>
                        <div class="auth-form___addition">
                            <div class="auth-form__help">
                                <a href="" class="alink-pri auth-from__forgotpass">Quên mật khẩu</a>
                                <span class="auth-form__help-split"></span>
                                <a href="" class="alink-pri auth-form__helplink">Trợ giúp?</a>
                            </div>
                        </div>

                        <div class="auth-form__control">
                            <button class="btn submit-btn log-form-child" onclick="CheckLogIn()">ĐĂNG NHẬP</button>
                            <button class="btn back-btn log-form-child">Quay lại</button>
                        </div>

                    </div>
                </div>
                <div class="auth-form__footer">
                    <button class="btn btn-face"><i class="fab fa-facebook-square"></i> Kết nối với Facebook</button>
                    <button class="btn btn-gg"><i class="fab fa-google"></i> Kết nối với Google</button>
                </div>
            </div>
        </div>
        <div class="modal__overlay"></div>
    </div>
    <script type="text/javascript" src="/script/ReactValidation.js"></script>
    <script type="text/javascript" src="/script/client_header.js"></script>
</body>

</html>