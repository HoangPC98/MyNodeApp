
<div class="mt-4">
    <h2>Edit Course Here</h2>
    <form method="POST" action="/courses/{{data._id}}"> 
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Course Name</label>
            <input type="text" class="form-control"  value="{{data.name}}" name="name">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Description</label>
            <textarea class="form-control" name="description">{{data.description}}</textarea>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Course Avatar Image</label>
            <input type="text" class="form-control" value="{{data.img}}" name="img">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Video ID</label>
            <input type="text" class="form-control" value="{{data.videoID}}" name="videoID">
        </div>
      
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>